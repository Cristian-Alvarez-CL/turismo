  </div>

  <!-- Picture debajo de los íconos -->
  <Picture
    class="h-1oo w-100 object-cover ml-10"
    style="height: 400px;"
    src={mapumayImagenRectangolar}
    alt="Turismo Mapumay"
    widths={[200, 400, 600]}
